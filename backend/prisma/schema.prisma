// Prisma schema for Green Journal
// Update the provider and url as needed

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  name       String
  location   String?
  points     Int      @default(0)
  created_at DateTime @default(now())
  actions           Action[]
  userChallenges    UserChallenge[]
  userRewards       UserReward[]
}

model Action {
  id          Int      @id @default(autoincrement())
  user        User     @relation(fields: [user_id], references: [id])
  user_id     Int
  type        String
  impact_score Int
  date        DateTime
}

model Challenge {
  id            Int      @id @default(autoincrement())
  title         String
  description   String
  start_date    DateTime
  end_date      DateTime
  reward_points Int
  userChallenges UserChallenge[]
}

model UserChallenge {
  id           Int      @id @default(autoincrement())
  user         User     @relation(fields: [user_id], references: [id])
  user_id      Int
  challenge    Challenge @relation(fields: [challenge_id], references: [id])
  challenge_id Int
  status       String
}

model Reward {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  cost_points Int
  available   Boolean  @default(true)
  userRewards UserReward[]
}

model UserReward {
  id          Int      @id @default(autoincrement())
  user        User     @relation(fields: [user_id], references: [id])
  user_id     Int
  reward      Reward   @relation(fields: [reward_id], references: [id])
  reward_id   Int
  date_claimed DateTime
}
